<div class="card" >

    <div class="card-body">
        <h4 class="card-title">{{ manga.title }} {{ volume.volumeNumber }}</h4>
        <p class="card-text">Release date: {{ volume.releaseDate|date("m/d/Y") }}</p>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ form_start(volume_delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(volume_delete_form) }}
        {% endif %}
    </div>
</div>