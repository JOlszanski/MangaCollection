{% extends 'base.html.twig' %}

{% block title %}
 {{ manga.title }}
{% endblock %}

{% block body %}
    <h1>Manga</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manga.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ manga.title }}</td>
            </tr>
            <tr>
                <th>Jptitle</th>
                <td>{{ manga.jpTitle }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ manga.user.nickname}}</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>{{ manga.publisher }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ manga.status }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ manga.author }}</td>
            </tr>
            <tr>
                <th>Volumes</th>
                <td>{{ manga.volumes|length }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manga_index') }}">Back to the list</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
        <li>
            <a href="{{ path('manga_edit', { 'id': manga.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
        {% for volume in volumes %}
            {{ render(controller('AppBundle:manga:volumeShow', {'manga': manga, 'volume': volume})) }}
        {% endfor %}

        {% if is_granted('ROLE_ADMIN') %}
            {{ render(controller('AppBundle:manga:volumeForm', {'manga': manga})) }}
        {% endif %}
{% endblock %}
